<Page x:Class="PasswordManager.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PasswordManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="LoginPage">

    <Grid Background="#efefef">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -50 0 0">
            <Image Height="100" Source="icons\padlock.png" />
            <Label Content="Password Manager Login" FontWeight="Bold" FontSize="18" />
            <Label Padding="0 5 0 5" Content="Username" />
            <TextBox Name="LoginUsernameInput" Padding="4" />
            <Label Padding="0 5 0 5" Content="Password" />
            <TextBox Name="LoginPasswordInput" Padding="4" />
            <Button Name="LoginButton" Click="LoginButton_Click" Content="Login" Cursor="Hand" Margin="0 10 0 10" Background="#FF3454D1" Foreground="White" Padding="0 5 0 5" BorderThickness="0" Height="26" />
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="RegisterPage.xaml">
                    Register
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
